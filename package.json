{
  "name": "lorai-engine",
  "version": "0.1.0",
  "description": "Lorcana TCG Engine and AI Simulator",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "start": "node dist/index.js",
    "server:start": "ts-node src/server/game-server.ts",
    "server:dev": "ts-node-dev --respawn src/server/game-server.ts",
    "dev": "next dev",
    "next:build": "next build",
    "next:start": "next start",
    "test:parser": "jest src/tests/parser",
    "test:executor": "jest src/tests/abilities",
    "test:engine": "jest src/tests/engine",
    "test:rules": "jest src/tests/rules",
    "test:parser:batches": "jest src/tests/parser/batch",
    "test:parser:keywords": "jest src/tests/parser --testNamePattern=keyword",
    "test:executor:keywords": "jest src/tests/abilities/keyword",
    "test:executor:auto": "jest src/tests/abilities/auto",
    "test:executor:tdd": "jest src/tests/abilities/tdd-batch",
    "test:fast": "jest --testPathPattern='(parser|engine)' --maxWorkers=2",
    "test:slow": "jest src/tests/abilities --maxWorkers=1",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "validate:abilities": "ts-node src/ability-validator.ts",
    "validate:abilities:verbose": "ts-node src/ability-validator.ts --verbose",
    "validate:abilities:parse-only": "ts-node src/ability-validator.ts --level=1"
  },
  "keywords": [
    "lorcana",
    "tcg",
    "simulator",
    "ai"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "framer-motion": "^10.18.0",
    "fs-extra": "^11.2.0",
    "next": "^14.2.35",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "readline-sync": "^1.4.10",
    "uuid": "^13.0.0",
    "ws": "^8.18.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/readline-sync": "^1.4.8",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "autoprefixer": "^10.4.23",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
