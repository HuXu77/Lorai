{
  "name": "lorai-engine",
  "version": "0.1.0",
  "description": "Lorcana TCG Engine and AI Simulator",
  "main": "dist/index.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "next:build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:parser": "vitest run src/tests/parser",
    "test:executor": "vitest run src/tests/abilities",
    "test:engine": "vitest run src/tests/engine",
    "test:rules": "vitest run src/tests/rules",
    "test:parser:batches": "vitest run src/tests/parser/batch",
    "test:parser:keywords": "vitest run src/tests/parser -t keyword",
    "test:executor:keywords": "vitest run src/tests/abilities/keyword",
    "test:executor:auto": "vitest run src/tests/abilities/auto",
    "test:executor:tdd": "vitest run src/tests/abilities/tdd-batch",
    "test:fast": "vitest run src/tests/parser src/tests/engine",
    "test:slow": "vitest run src/tests/abilities",
    "validate:abilities": "ts-node src/ability-validator.ts",
    "validate:abilities:verbose": "ts-node src/ability-validator.ts --verbose",
    "validate:abilities:parse-only": "ts-node src/ability-validator.ts --level=1",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug"
  },
  "keywords": [
    "lorcana",
    "tcg",
    "simulator",
    "ai"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "framer-motion": "^10.18.0",
    "fs-extra": "^11.2.0",
    "next": "^14.2.35",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "readline-sync": "^1.4.10",
    "uuid": "^13.0.0",
    "ws": "^8.18.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.24",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/readline-sync": "^1.4.8",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.23",
    "jsdom": "^27.4.0",
    "playwright": "^1.57.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^6.0.4",
    "vitest": "^4.0.16"
  }
}